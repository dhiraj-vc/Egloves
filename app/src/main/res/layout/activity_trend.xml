<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".home.TrendActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginBottom="8dp"
       />

    <Button
        android:id="@+id/button2"
        android:layout_width="189dp"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="420dp"
        android:background="@drawable/background_login_btn"
        android:text="Make an Offer" />

    <Button
        android:id="@+id/button3"
        android:layout_width="189dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="210dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="2dp"
       android:background="@drawable/background_login_btn"
        android:text="Show Phone" />

    <androidx.cardview.widget.CardView
        android:id="@+id/trendCardView"
        android:layout_width="371dp"
        android:layout_height="151dp"
        android:layout_marginTop="299dp"
        android:background="@color/grey"
        android:clickable="true">

        <LinearLayout
            android:layout_width="401dp"
            android:layout_height="151dp"
            android:layout_alignStart="@+id/trendCardView"
            android:layout_marginTop="12dp"
            android:layout_weight="2"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textViewVersion"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Type                           Training"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textViewVersion1"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Subtype                      Business"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textViewVersion1345"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Level                           Begginer"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textViewVersion134"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Service Features      Distance Learning"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>







</RelativeLayout>
