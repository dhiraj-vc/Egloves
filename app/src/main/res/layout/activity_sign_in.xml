    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User"
        android:textSize="20sp"
        android:textColor="#9C9999"
        android:layout_marginTop="50dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Enter an e-mail or phone number"
        android:textSize="15sp"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textColorHint="#9C9999" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9C9999"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password*"
        android:layout_marginTop="18dp"
        android:textColor="#9C9999"
        android:textSize="20sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter a password"
        android:inputType="text"
        android:textSize="15sp"
        android:textColorHint="#9C9999"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9C9999"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Never disclose your E-globes password to anyone"
        android:textSize="12sp"
        android:layout_marginTop="3dp"
        android:textColor="#9C9999"/>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_login_btn"
        android:clickable="true"
        android:padding="16dp"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="#9C9999" />



    <TextView
        android:id="@+id/forgot_password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:padding="16dp"
        android:text="Forget Your Password?"
        android:textColor="#9C9999" />



</LinearLayout>